<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaInterfacesPrimerTrimestre.Vista.VistaUsuarios"
             xmlns:modelo="clr-namespace:PracticaInterfacesPrimerTrimestre.Modelo"
             xmlns:template="clr-namespace:PracticaInterfacesPrimerTrimestre.Templates"
             x:DataType="modelo:User">
    <FlexLayout Background="White">
        <CollectionView x:Name="lista" ItemsLayout="VerticalGrid,2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <template:TemplateUsuario WidthRequest="100"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </FlexLayout>
</ContentPage>