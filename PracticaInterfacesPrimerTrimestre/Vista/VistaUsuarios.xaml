<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaInterfacesPrimerTrimestre.Vista.VistaUsuarios"
             xmlns:te="clr-namespace:PracticaInterfacesPrimerTrimestre.Templates"
             
             Title="VistaUsuarios">
    <VerticalStackLayout>
        <Label Text="Lista Usuarios"/>

        <CollectionView x:Name="lista">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <te:TemplateUsuario/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>