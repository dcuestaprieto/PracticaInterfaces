<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mo="clr-namespace:PracticaInterfacesPrimerTrimestre.Modelo"
             x:Class="PracticaInterfacesPrimerTrimestre.Templates.TemplateUsuario"
             x:DataType="mo:User"
             WidthRequest="100">
    <!-- Tarjeta de Usuario -->
    <Frame Margin="5" Padding="5">
        <Grid BackgroundColor="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="{Binding Id}" Margin="10,0,0,0">
                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Nombre Usuario:" Padding="0,0,10,0"/>
                    <Label Text="{Binding Username}" FontSize="16" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Edad: " Padding="0,0,10,0"/>
                    <Label Text="{Binding Age}" FontSize="14"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>